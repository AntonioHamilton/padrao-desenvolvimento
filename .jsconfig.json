{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@controller/*": ["src/controller/*"],
      "@model/*": ["src/model/*"],
      "@helper/*": ["src/helper/*"],
      "@routes/*": ["src/routes,js"],
      "@middleware/*": ["src/midlleware/*"],
      "@service/*": ["src/service/*"],
      "@test/*": ["src/test/*"],
      "@docs/*": ["src/docs/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
