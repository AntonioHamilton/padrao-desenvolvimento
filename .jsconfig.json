{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@helpers/*": ["src/helpers/*"],
      "@routes/*": ["src/routes,js"],
      "@middlewares/*": ["src/midllewares/*"],
      "@services/*": ["src/services/*"],
      "@test/*": ["src/test/*"],
      "@docs/*": ["src/docs/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
